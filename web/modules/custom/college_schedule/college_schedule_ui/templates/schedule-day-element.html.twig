{#
/**
 * @file
 * Default theme implementation for the marquee render element.
 *
 * Available variables:
 * - attributes: Attributes for the marguee tag.
 * - content: The text to display within the marquee tag.
 *
 * @ingroup themeable
 * @ingroup render_example
 */
#}

<div{{ attributes }}>
  <div class="day-header">{{ content }}</div>
  <div class="day-events">
    {% for item in items %}
      <div class="schedule-event-item"
           data-event-number="{{ item.event_id }}"
           data-day-id="{{ item.day_id }}">
        {{ item.label }}
      </div>
    {% endfor %}
  </div>
  <div class="day-actions">
    <button class="btn btn-success day-add-event">Add</button>
  </div>
</div>
